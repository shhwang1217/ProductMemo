<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ProductRecordActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/product_info"
        android:textSize="@dimen/textview_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBtnSnapshot"
            android:layout_width="@dimen/img_large_size"
            android:layout_height="@dimen/img_large_size"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/unknown_product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/edit" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/delete_record" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/close" />

        </LinearLayout>

    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="0"
        android:stretchColumns="1">

    <TableRow>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:paddingLeft="@dimen/textview_title_padding"
            android:text="@string/product_barcode"
            android:textSize="@dimen/textview_font_size" />

        <TextView
            android:id="@+id/txtBarcode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:textSize="@dimen/textview_font_size"
            android:layout_span="2" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:paddingLeft="@dimen/textview_title_padding"
            android:text="@string/product_name"
            android:textSize="@dimen/textview_font_size" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:textSize="@dimen/textview_font_size"
            android:layout_span="2" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:paddingLeft="@dimen/textview_title_padding"
            android:text="@string/product_price"
            android:textSize="@dimen/textview_font_size" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:textSize="@dimen/textview_font_size"
            android:layout_span="2" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:paddingLeft="@dimen/textview_title_padding"
            android:text="@string/product_cost"
            android:textSize="@dimen/textview_font_size" />

        <TextView
            android:id="@+id/txtCost"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:layout_margin="@dimen/textview_margin"
            android:textSize="@dimen/textview_font_size"/>

        <ImageView
            android:id="@+id/imgBtnShow"
            android:layout_width="@dimen/img_small_size"
            android:layout_height="@dimen/img_small_size"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/eye" />
    </TableRow>

  </TableLayout>

</LinearLayout>