<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ModifyRecordActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/product_info"
        android:textSize="@dimen/textview_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBtnSnapshot"
            android:layout_width="@dimen/img_large_size"
            android:layout_height="@dimen/img_large_size"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/unknown_product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/confirm" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="0"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_title_padding"
                android:text="@string/product_barcode"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/txtBarcode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginLeft="@dimen/textview_margin"
                android:textSize="@dimen/textview_font_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_title_padding"
                android:text="@string/product_name"
                android:textSize="@dimen/textview_font_size" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/textview_margin"
                android:inputType="text"
                android:textSize="@dimen/textview_font_size"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_title_padding"
                android:text="@string/product_price"
                android:textSize="@dimen/textview_font_size" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/textview_margin"
                android:inputType="numberDecimal"
                android:textSize="@dimen/textview_font_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_title_padding"
                android:text="@string/product_cost"
                android:textSize="@dimen/textview_font_size" />

            <EditText
                android:id="@+id/etCost"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/textview_margin"
                android:inputType="numberDecimal"
                android:textSize="@dimen/textview_font_size" />
        </TableRow>
    </TableLayout>

    </LinearLayout>
